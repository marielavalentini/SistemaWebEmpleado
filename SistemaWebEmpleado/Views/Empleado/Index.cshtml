@model IEnumerable<SistemaWebEmpleado.Models.Empleado>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Empleados</h1>
<table>
    <tr>
        <th>@Html.DisplayNameFor(m => m.EmpleadoId)</th>
        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
        <th>@Html.DisplayNameFor(m => m.Apellido)</th>
        <th>@Html.DisplayNameFor(m => m.DNI)</th>
        <th>@Html.DisplayNameFor(m => m.Legajo)</th>
        <th>@Html.DisplayNameFor(m => m.Titulo)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.EmpleadoId)</td>
            <td>@Html.DisplayFor(m => item.Nombre)</td>
            <td>@Html.DisplayFor(m => item.Apellido)</td>
            <td>@Html.DisplayFor(m => item.DNI)</td>
            <td>@Html.DisplayFor(m => item.Legajo)</td>
            <td>@Html.ActionLink(item.Titulo, "ListarPorTitulo", new { titulo = item.Titulo })</td>

            <td>@Html.ActionLink("Detalle", "Detalle", new { id = item.EmpleadoId })</td>
            <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.EmpleadoId })</td>
            
        </tr>
    }

</table>
<div class="agregar">
    <p>@Html.ActionLink("Agregar nuevo empleado", "Insertar", "Empleado")</p>
    <p>@Html.ActionLink("Volver al inicio", "Index", "Home")</p>
</div>




